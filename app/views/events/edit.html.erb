<span style="padding:0px 10px;"></span>
<div class="row">
  <div class="col-xs-6 col-sm-4"></div>
  <div class="col-xs-6 col-sm-4">

<h1>Изменить задание</h1>

<%= form_for :events, url: event_path(@events), method: :patch do |f| %>
    <p>
      Название события:<br>
      <%= f.text_field :event_name %>
    </p>
    <p>
      Дата/время:<br>
      <%= f.datetime_select :event_data %>
    </p>
    <p>
      Повторять событие:<br>
      <%= f.select(:period, [['Не повторять', 0], ['Каждый день', 1], ['Каждую неделю', 2],['Каждый месяц', 3], ['Каждый год', 4]]) %>
    </p>

    <p>
      <%= f.submit %>
    </p>
    <%= link_to 'Back', events_path %>
        <td><%= link_to 'Destroy', event_path(@events),
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
  </div>
    <div class="clearfix visible-xs-block"></div>
    <div class="col-xs-6 col-sm-4"></div>
  </div>
